<schema>

	<element tablename="sys_message_queue">
		<field name="objid" primary="true" visible="true" searchable="true"/>
		
		<!-- state: 0 - open, 1-sent 2-error -->
		<field name="state" type="integer"/>
		<field name="dtsent" required="true"/>
		<field name="email" />
		<field name="mobileno" />
		<field name="subject" required="true"/>
		<field name="message" required="true"/>
		<field name="errmsg" />

		<!-- mail connection -->
		<field name="connection" required="true"/>
	</element>

</schema>
